package components

import "github.com/salt-today/salttoday2/internal/store"

templ UsersListComponent(users []*store.User, nextUrl string) {
	<div class="space-y-4">
		for _, comment := range users {
			@UserComponent(comment)
		}
	</div>
	if len(users) > 0 {
		<div hx-get={ nextUrl } hx-trigger="revealed" hx-swap="outerHTML"></div>
	}
}
