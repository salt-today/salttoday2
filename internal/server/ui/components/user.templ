package components

import (
	"fmt"
	"github.com/salt-today/salttoday2/internal/store"
)

templ UserComponent(user *store.User) {
	<div>
		<span>
			{ fmt.Sprintf("%d", user.TotalLikes) }👍
			<a href={ templ.URL(fmt.Sprintf("/user/%d", user.ID)) }>
				{ user.UserName }
			</a>
			👎 { fmt.Sprintf("%d", user.TotalDislikes) }
		</span>
	</div>
}
